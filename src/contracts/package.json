{
  "name": "mavryk-dapp-contracts",
  "version": "1.0.0",
  "description": "",
  "devDependencies": {
    "@types/jest": "^28.1.3",
    "@types/mocha": "^9.1.1",
    "@types/yargs": "^17.0.10",
    "assert": "^2.0.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^3.0.0",
    "fs-extra": "^10.1.0",
    "lodash": "^4.17.21",
    "onchange": "^7.1.0",
    "promise-retry": "^2.0.1",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "pull-sandbox": "TAG=4.7.0 docker-compose -f docker-compose.yml pull",
    "start-sandbox": "TAG=4.7.0 docker-compose -f docker-compose.yml up -d && bash ./sandbox-init.sh",
    "down-sandbox": "docker-compose -f docker-compose.yml down",
    "clear-sandbox": "docker-compose -f docker-compose.yml down -v",
    "restart-sandbox": "yarn clear-sandbox && yarn start-sandbox",
    "start-sandbox-old": "docker run --rm --name mavryk-sandbox -e flextesa_node_cors_origin='*' -e block_time=3 --detach -p 8732:20000 oxheadalpha/flextesa:20230607 mumbaibox start && bash ./sandbox-init.sh",
    "start-sandbox-m1": "docker run --rm --platform=linux/arm64/v8 --name mavryk-sandbox -e block_time=3 --detach -p 8732:20000 oxheadalpha/flextesa:20230607 mumbaibox start && bash ./sandbox-init.sh",
    "compile-lambda-function": "ts-node scripts/proxyLambdaFunctionMaker/proxyLambdaFunctionPacker.ts",
    "generate-error-codes": "bash ./generate-error-codes.sh",
    "generate-lambda-indexes": "ts-node scripts/cli.ts generate-lambda-indexes",
    "compile-raw": "./bash-compile-contracts.sh",
    "compile": "./bash-compile-contracts.sh -c",
    "deploy": "bash ./bash-deploy-contracts.sh -c",
    "test": "bash ./bash-test-contracts.sh -c",
    "compile-lambdas": "./bash-compile-contracts.sh --lambdas-only",
    "compile-contract-lambdas": "./bash-compile-contracts.sh --lambdas-only -c",
    "compile-contract-no-lambdas": "./bash-compile-contracts.sh --contracts-only -c",
    "test-net-deploy": "NODE_ENV=development NETWORK_TO_MIGRATE_TO=ghostnet yarn deploy all",
    "test-net-deploy-prod": "NODE_ENV=development NETWORK_TO_MIGRATE_TO=ghostnet PRODUCTION=true yarn deploy all",
    "test-net-interact": "NODE_ENV=development NETWORK_TO_MIGRATE_TO=ghostnet ts-mocha --paths test/interact/00_test_testnet_interactions.spec.ts --bail --timeout 900000",
    "test-net-setup-investor": "NODE_ENV=development NETWORK_TO_MIGRATE_TO=ghostnet ts-mocha --paths test/interact/02_test_testnet_investors_setup.spec.ts --bail --timeout 900000",
    "test-net-setup": "NODE_ENV=development NETWORK_TO_MIGRATE_TO=ghostnet PRODUCTION=true ts-mocha --paths test/interact/01_test_testnet_prod_setup.spec.ts --bail --timeout 900000",
    "pytest": "yarn migrate && pytest -s",
    "pytest-only": "pytest -s",
    "setup-prod-environment": "yarn test-net-deploy-prod && yarn test-net-setup"
  },
  "author": "devteam@mavryk.finance",
  "license": "MIT",
  "dependencies": {
    "@mavrykdynamics/create-lambda-bytes": "^0.2.4",
    "@taquito/signer": "^17.2.0",
    "@taquito/taquito": "^17.2.0",
    "@taquito/tezbridge-signer": "^14.2.0",
    "@taquito/utils": "^17.2.0",
    "@types/expect": "^24.3.0",
    "assert": "^2.0.0",
    "convert-string": "^0.1.0",
    "mocha": "^10.0.0",
    "sha256": "^0.2.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4",
    "yargs": "^17.5.1"
  }
}
