{
  "name": "mavryk-dapp-contracts",
  "version": "1.0.0",
  "description": "",
  "devDependencies": {
    "@types/jest": "^28.1.3",
    "@types/mocha": "^9.1.1",
    "@types/yargs": "^17.0.10",
    "assert": "^2.0.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^3.0.0",
    "fs-extra": "^10.1.0",
    "lodash": "^4.17.21",
    "onchange": "^7.1.0",
    "promise-retry": "^2.0.1",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "start-sandbox": "docker run --rm --name mavryk-sandbox -e flextesa_node_cors_origin='*' -e block_time=3 --detach -p 8732:20000 oxheadalpha/flextesa:20220510 jakartabox start && bash ./sandbox-init.sh",
    "start-sandbox-m1": "docker run --rm --platform=linux/arm64/v8 --name mavryk-sandbox -e block_time=3 --detach -p 8732:20000 oxheadalpha/flextesa:20220510 jakartabox start && bash ./sandbox-init.sh",
    "generate-error-codes": "bash ./generate-error-codes.sh",
    "pre-compile": "ts-node scripts/cli.ts compile -o contracts/compiled -c",
    "pre-compile-m1": "ts-node scripts/cli.ts compile -o contracts/compiled -m true -c",
    "pre-compile-all": "rm -rf ./contracts/compiled && ts-node scripts/cli.ts compile -p contracts/main -o contracts/compiled",
    "pre-compile-all-m1": "rm -rf ./contracts/compiled && ts-node scripts/cli.ts compile -p contracts/main -o contracts/compiled -m true",
    "compile-lambdas": "ts-node scripts/cli.ts compile-lambda",
    "compile-contract-lambdas": "ts-node scripts/cli.ts compile-contract-lambda -c",
    "compile-contract": "ts-node scripts/cli.ts compile-contract -c",
    "compile-contract-no-lambdas": "ts-node scripts/cli.ts compile-contract-no-lambdas -c",
    
    "compile-all-lambdas-1": "yarn compile-contract-lambdas governanceProxy,governance,governanceFinancial,governanceSatellite && yarn compile-contract-lambdas doorman,delegation,breakGlass,council,emergencyGovernance,vesting",
    "compile-all-lambdas-2": "yarn compile-contract-lambdas farm,farmFactory,treasury,treasuryFactory,aggregator,aggregatorFactory",
    "compile-all-lambdas-3": "yarn compile-contract-lambdas vault,lendingController",
    "compile-all-contracts-no-lambdas": " yarn compile-contract-no-lambdas mvkToken,mockFa12Token,mockFa2Token,tokenPoolLpToken",
    
    "compile": "yarn pre-compile-all && rm -rf ./build && ts-node scripts/cli.ts compile -f json -o build && yarn compile-all-lambdas-1 && yarn compile-all-lambdas-2 && yarn compile-all-lambdas-3",
    "compile-m1": "yarn pre-compile-all-m1 && rm -rf ./build && ts-node scripts/cli.ts compile -f json -o build -m true && yarn compile-lambdas",

    "migrate": "./deploy-contracts.sh",
    "migrate-lendingController" : "ts-mocha --paths test/migrations/migrate_lendingController.spec.ts --bail --timeout 600000",
    "migrate-lendingControllerMockTime" : "ts-mocha --paths test/migrations/migrate_lendingControllerMockTime.spec.ts --bail --timeout 600000",
    
    "test-net-deploy": "NODE_ENV=development NETWORK_TO_MIGRATE_TO=ghostnet ./deploy-contracts.sh",
    "test-net-interact": "NODE_ENV=development NETWORK_TO_MIGRATE_TO=ghostnet ts-mocha --paths test/interact/00_test_testnet_interactions.spec.ts --bail --timeout 900000",
    "test": "yarn migrate && ts-mocha --paths test/*.spec.ts --bail --timeout 900000",
    "test-full": "yarn compile && yarn migrate && ts-mocha --paths test/*.spec.ts --bail --timeout 500000",
    "test-full-m1": "yarn compile-m1 && yarn migrate && ts-mocha --paths test/*.spec.ts --bail --timeout 500000",
    "test-only": "ts-mocha --paths test/*.spec.ts --bail --timeout 300000",
    "test-single-file": "ts-mocha --bail --timeout 300000 --paths",
    "pytest": "yarn migrate && pytest -s",
    "pytest-only": "pytest -s",
    "clean": "rm -rf ./build && rm -rf contracts/compiled && rm -rf ./deployments"
  },
  "author": "matej.sima@stove-labs.com",
  "license": "MIT",
  "dependencies": {
    "@taquito/signer": "^13.0.0",
    "@taquito/taquito": "^13.0.0",
    "@taquito/tezbridge-signer": "^13.0.0",
    "@taquito/utils": "^13.0.0",
    "@types/expect": "^24.3.0",
    "assert": "^2.0.0",
    "convert-string": "^0.1.0",
    "mocha": "^10.0.0",
    "sha256": "^0.2.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4",
    "yargs": "^17.5.1"
  }
}
